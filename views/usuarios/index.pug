extends ../layout
block content
    div.container.mt-5.h-100
        br
        br
        br
        a.btn.btn-success(href='/usuarios/create') Nuevo usuario
        br
        table.table
            thead
                tr
                    th(scope='col') Nombre
                    th(scope='col') Correo
                    th(scope='col') Verificado
                    th(scope='col')
                    th(scope='col')
                tbody
                    each usuario in usuarios
                        tr
                            td=usuario.nombre
                            td=usuario.email
                            td=usuario.verificado ? 'SÃ­':'No'
                            td
                                a.btn(href=`usuarios/${usuario.id}/update`) Editar
                            td
                                form.inline(method='post' action='usuarios/' + usuario.id + '/delete')
                                    input(type='hidden' name='id' value=usuario.id)
                                    button.link-buttom(type='submit' name='submit_param' value='submit_value' class='btn')
                                        = 'Eliminar'
