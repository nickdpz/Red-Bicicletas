extends ../layout

block content
    .container.my-5.py-4
        .row
            a(href='/bicicletas/create') Nueva Bicicleta
        .row
            .col-md-10.col-lg-8.mx-auto.text-center
                table.table
                    thead
                        tr
                            th(scope='col') #
                            th(scope='col') Color
                            th(scope='col') Modelo
                            th(scope='col') Ubicacion
                            th(scope='col')
                            th(scope='col')
                    tbody
                        each bici in bicis
                            tr
                                td= bici.id
                                td= bici.color
                                td= bici.modelo
                                td= bici.ubicacion
                                td
                                    a(href=`/bicicletas/${bici.id}/show`) Ver
                                td
                                    a(href=`/bicicletas/${bici.id}/update`) Editar
                                td
                                    form.inline(method='post' action=`/bicicletas/${bici.id}/delete`)
                                        input(type='hidden' name='id' value=bici.id)
                                        button.link-button(type='submit' name='submit_param' value='submit_value' class='btn')
                                            ='Eliminar'